      <ul>
      <% @compra.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>

    <% end %>

    <%= form_tag do %>
      <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Lote de compra</th>
            <th>Actualiza lote de compra</th>
          </tr>
        </thead>
        
        <tbody>
          <% @faltantes.each do |articulo| %>
            <%= hidden_field_tag "articulos[]", articulo %>
