<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Desc</th>
      <th>Saldo</th>
      <th>Stockmin</th>
      <th>Lotecompra</th>
      <th>Unidad</th>
      <th>Unidadcompra</th>
      <th>Ucompraporudeuso</th>
      <th>Family</th>
      <th>Sfamily</th>
      <th>Ssfamily</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.nombre %></td>
        <td><%= article.desc %></td>
        <% if article.balances.last.present? %>
          <td><%= article.balances.last.saldo.round(2) %></td>
          <% else %>
          <td> </td>
          <%end%>
        
        
        <td><%= article.stockmin %></td>
        <td><%= article.lotecompra %></td>
        <td><%= article.unidad %></td>
        <td><%= article.unidadcompra %></td>
        <td><%= article.ucompraporudeuso %></td>
        
        <% if article.family.present? %>
          <td><%= article.family.nombre %></td>
        <%else%>
          <td>s/fam</td>
        <%end%>

        <% if article.sfamily.present? %>
          <td><%= article.sfamily.nombre %></td>
        <%else%>
          <td>s/sfam</td>
        <%end%>

        <% if article.ssfamily.present? %>
          <td><%= article.ssfamily.nombre %></td>
        <%else%>
          <td>s/ssfam</td>
        <%end%>


        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

