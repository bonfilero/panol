<h1>Art√≠culos y estados</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Saldo</th>
      <th>Stockmin</th>
      <th>Estado</th>
      <th colspan='10'></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.nombre %></td>
        <% if article.balances.last.present? %>
          <td><%= article.balances.last.saldo %></td>
          <% else %>
          <td> </td>
          <%end%>
        
        
        <td><%= article.stockmin %></td>
        <td><%= article.state %></td>
        
        <td><%= link_to 'Show', article %></td>

        <td><%= link_to 'Entregar', salida_path(article_id:article.id) %></td>

        <td><%= link_to 'Ingresar', entrada_path(article_id:article.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
