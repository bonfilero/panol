<%= form_for([@article,@output]) do |f| %>
  <h2><%= @article.nombre %></h2>
  <% if @output.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@output.errors.count, "error") %> prohibited this output from being saved:</h2>

      <ul>
      <% @output.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :cantidad %><br>
    <%= f.text_field :cantidad %>
  </div>

  <div class="field">
      <%= f.label "Equipo" %><br>
      <%= f.select(:equipment_id, options_for_select(@opciones_equipo), {include_blank: true}) %>
  </div>
  <div class="field">
      <%= f.label "Operario" %><br>
      <%= f.select(:worker_id, options_for_select(@opciones_operario), {include_blank: true}) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>