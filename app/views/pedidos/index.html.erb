
<h1>Artículos pendientes de compra</h1>
<%     %>

<table>
  <thead>
    <tr>
      <th>Fecha pedido</th>
      <th>id pedido</th>
      <th>nombre pañol</th>

      <th>desc compra</th>
      <th>Stock</th>
      <th>Stock ideal </th>
      <th colspan="30"></th>
    </tr>
  </thead>
  <tbody>
		<% @articles.each do |article| %>
			<tr>
				<td>
					<%= article.article_has_buyorder.last.created_at %>
				</td>
				<td>
					<%= article.ultimoped %>
				</td>
				<td>
					<%= article.nombre %>
				</td>
				<td>
					<%= article.desc %>
				</td>
				<td>
					<%= article.balances.last.saldo %>
				</td>
				<td>
					<%= article.stockmin %>
				</td>
				
			</tr>
		<%  end    %>
	
	
	</tbody>
</table>

<% if @ordenes_abiertas.length > 0 %>
	<table>
		<thead>
			<tr>
				<td>Id Orden</td>
				<td>Fecha de orden</td>
				<td>Artículo</td>
				<td>Descripción</td>
				<td>Cantidad</td>


			</tr>
		</thead>
		<tbody>
			<% @ordenes_abiertas.each do |orden| %>
				<tr>
					<td><%= orden.id %></td>
					<td><%= orden.created_at %></td>
					<td><%= orden.article.nombre %></td>
					<td>
						<% if orden.article.desc.present? %>
							<%= orden.article.desc %>
						<% end %>
					</td>
					<td><%= orden.cantidad %></td>
					


				</tr>
			<% end %>

		</tbody>
	</table>



<% else %>
<div>Sin pedidos pendientes</div>
<% end %>

	




	